.single-container
  = render 'products/sub_header'
  .single-main
    .login-form
      .login-no-account
        %p 
          アカウントをお持ちでない方はこちら
          =link_to '新規会員登録', new_user_registration_path 
      .login-form-inner
        %button#google-login.btn-google 
          = icon("fab","google",class:'icon')
          Googleでログイン
        %button#facebook-login.btn-facebook
          = icon("fab","facebook-square",class:'icon')
          Facebookでログイン
        %button#apple-login.btn-apple
          = icon("fab","apple",class:'icon')
          Appleでログイン
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-label
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス'
          .form-label
            = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード'
          .form-label
            = f.submit "ログイン", class: 'btn'
          =link_to "パスワードをお忘れの方","#"
  = render 'products/sub_footer'